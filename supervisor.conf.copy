[supervisord]
nodaemon=true

[program:mosquitto]
directory=/etc/examon_deploy/examon/broker
command=mosquitto -c mosquitto.conf -p 1883
user=mosquitto
autostart=true
autorestart=true
stderr_logfile=/etc/examon_deploy/examon/broker/mosquitto.log
stdout_logfile=/etc/examon_deploy/examon/broker/mosquitto.log
stdout_logfile_maxbytes = 5MB
stdout_logfile_backups = 2
stderr_logfile_maxbytes = 5MB
stderr_logfile_backups = 2
killasgroup=true
stopasgroup=true
priority=900
startsec=2

[program:mqtt2kairosdb]
directory=/etc/examon_deploy/examon/subscribers/mqtt2kairosdb_queue
command=/etc/examon_deploy/examon/scripts/pypy_venv/bin/python ./conn_mqtt_to_kairosdb.py run
autostart=true
autorestart=true
stderr_logfile=/etc/examon_deploy/examon/subscribers/mqtt2kairosdb_queue/mqtt2kairosdb_sup.log
stdout_logfile=/etc/examon_deploy/examon/subscribers/mqtt2kairosdb_queue/mqtt2kairosdb_sup.log
stdout_logfile_maxbytes = 5MB
stdout_logfile_backups = 2
stderr_logfile_maxbytes = 5MB
stderr_logfile_backups = 2
killasgroup=true
stopasgroup=true


[program:examon-server]
directory=/etc/examon_deploy/examon/web/examon-server
command=/etc/examon_deploy/examon/web/examon-server/flask/bin/python ./server.py
autostart=true
autorestart=true
stderr_logfile=/etc/examon_deploy/examon/web/examon-server/server_sup.log
stdout_logfile=/etc/examon_deploy/examon/web/examon-server/server_sup.log
stdout_logfile_maxbytes = 5MB
stdout_logfile_backups = 2
stderr_logfile_maxbytes = 5MB
stderr_logfile_backups = 2
killasgroup=true
stopasgroup=true


